{
  "name": "budgeting-app-nuxt",
  "version": "1.0.0",
  "description": "A simple budgeting application built with Nuxt 3",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "cleanup": "FOR /L %i IN (3000,1,3010) DO FOR /F \"tokens=5\" %P IN ('netstat -ano ^| findstr :%i 2^>nul') DO taskkill /F /PID %P 2>nul",
    "cleanup:all": "taskkill //F //IM node.exe"
  },
  "dependencies": {
    "@nuxt/ui": "^2.22.3",
    "@nuxtjs/color-mode": "^4.0.0",
    "@prisma/client": "^6.19.0",
    "@vueuse/core": "^14.0.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "nuxt": "^3.15.4",
    "v-calendar": "^3.1.2",
    "vue": "^3.5.13",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.6.4",
    "@types/node": "^24.10.1",
    "prisma": "^6.19.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "vue-tsc": "^3.1.5"
  }
}
